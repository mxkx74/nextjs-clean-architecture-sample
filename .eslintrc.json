{
  "extends": [
    "plugin:@next/next/recommended",
    "next/core-web-vitals",
    "standard",
    "plugin:import/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:storybook/recommended",
    "plugin:jest/recommended",
    "plugin:jest/style",
    "plugin:jsx-a11y/strict",
    "prettier"
  ],
  "plugins": ["@typescript-eslint", "jest", "strict-dependencies", "no-relative-import-paths", "unused-imports"],
  "rules": {
    // 絶対パスを強制
    "no-relative-import-paths/no-relative-import-paths": [
      "error",
      {
        "allowSameFolder": true,
        "rootDir": "src",
        "prefix": "@"
      }
    ],
    // 循環参照の禁止
    "import/no-cycle": "error",
    // 依存関係の管理
    "strict-dependencies/strict-dependencies": [
      "error",
      [
        {
          "module": "src/feature/**/infrastructure/*",
          "allowReferenceFrom": ["src/feature/**/index.ts", "src/feature/**/adapter/*", "src/__test__/**/*"]
        },
        {
          "module": "src/feature/**/domain/*",
          "allowReferenceFrom": [
            "src/feature/**/adapter/*",
            "src/feature/**/infrastructure/*",
            "src/feature/**/index.ts"
          ],
          "allowSameModule": true
        },
        {
          "module": "react",
          "allowReferenceFrom": ["src/component", "src/pages", "src/hooks", "types"]
        },
        {
          "module": "next",
          "allowReferenceFrom": ["src/component", "src/pages", "src/hooks", "types"]
        },
        {
          "module": "src/component/page/index.tsx",
          "allowReferenceFrom": ["src/pages"],
          "allowSameModule": false
        }
      ],
      {
        "resolveRelativeImport": true
      }
    ],
    "react/display-name": "off",
    "@next/next/no-img-element": "off",
    "no-use-before-define": "off",
    "no-restricted-syntax": ["error", "TSEnumDeclaration"],
    "react-hooks/exhaustive-deps": "error",
    "react-hooks/rules-of-hooks": "error",
    "@typescript-eslint/interface-name-prefix": "off",
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "@typescript-eslint/prefer-interface": "off",
    "@typescript-eslint/ban-ts-ignore": "off",
    "no-unused-expressions": "off",
    "@typescript-eslint/consistent-type-assertions": [
      "warn",
      {
        "assertionStyle": "as",
        "objectLiteralTypeAssertions": "allow-as-parameter"
      }
    ],
    // "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error"],
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "import/order": [
      "warn",
      {
        "groups": ["builtin", "external", "internal", ["parent", "sibling"], "index", "object", "type"],
        "pathGroups": [
          {
            "pattern": "{react,react-dom/**,react-router-dom}",
            "group": "builtin",
            "position": "before"
          },
          {
            "pattern": "{next,next/**}",
            "group": "builtin",
            "position": "before"
          },
          {
            "pattern": "@/feature/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/lib/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/**",
            "group": "parent",
            "position": "before"
          }
        ],
        "pathGroupsExcludedImportTypes": ["builtin"],
        "newlines-between": "never",
        "alphabetize": {
          "order": "asc"
        }
      }
    ]
  }
}
